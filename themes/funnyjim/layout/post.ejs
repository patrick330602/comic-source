<article class="post">
	<div>

		<h2><%= page.title|| __('untitled') %></h2>
		<%= date(page.date,  "MMM DD, YYYY") %>
	<%- partial('_partial/navigator',{post: page}) %>
	<div>
		<% if (page.comic) { %>
			<img src="<%= page.comic %>" alt="<%= page.title %>" />
		<% } %>
		<% if (page.excerpt && page.hide_excerpt ){ %>
			<%- page.more %>
		<%} else{%>
			<%- page.content %>
		<%}%>
	</div>
	<%- partial('_partial/navigator',{post: page}) %>
</article>